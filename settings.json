      "Bash(git:*)",
      "Bash(gita:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(identify:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(kill:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(na:*)",
      "Bash(next:*)",
      "Bash(ni:*)",
      "Bash(nix:*)",
      "Bash(nlx:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nr:*)",
      "Bash(nun:*)",
      "Bash(pip:*)",
      "Bash(pnpm:*)",
      "Bash(poetry:*)",
      "Bash(prettier:*)",
      "Bash(printf:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(pyright:*)",
      "Bash(pytest:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(qsv:*)",
      "Bash(rg:*)",
      "Bash(ruff:*)",
      "Bash(rustc:*)",
      "Bash(screencapture:*)",
      "Bash(sed:*)",
      "Bash(select:*)",
      "Bash(sort:*)",
      "Bash(sqlite3:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tar:*)",
      "Bash(terminal-notifier:*)",
      "Bash(test:*)",
      "Bash(time:*)",
      "Bash(timeout:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(tsx:*)",
      "Bash(unzip:*)",
      "Bash(uv:*)",
      "Bash(which:*)",
      "Bash(while:*)",
      "Bash(xargs:*)",
      "Bash(yarn:*)",
      "Bash(zip:*)",
      "Bash(zk:*)",
      "Bash(~/.claude-code-docs/claude-docs-helper.sh:*)",
      "Bash(~/.claude/hooks:*)",
      "Glob",
      "Grep",
      "Read(~/.vimrc)",
      "Read(~/.zshrc)",
      "Skill(claude-code-plugins:code-review)",
      "Skill(dry-refactor)",
      "Skill(playwright-skill:playwright-skill)",
      "Skill(plugin-dev:skill-development)",
      "Skill(typescript)",
      "Skill(ui-ux-design)",
      "Skill(web3-frontend)",
      "SlashCommand(/commit:*)",
      "SlashCommand(/create-issue:*)",
      "SlashCommand(/create-pr:*)",
      "SlashCommand(/docs:*)",
      "SlashCommand(/update-pr:*)",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write(/tmp/**)",
      "mcp__context7",
      "mcp__next-devtools",
      "mcp__sequential-thinking",
      "mcp__serena"
    ],
    "deny": [
      "Bash(> /dev/sda*)",
      "Bash(> /etc/*)",
      "Bash(chmod -R:*)",
      "Bash(chown -R:*)",
      "Bash(dd:*)",
      "Bash(doas:*)",
      "Bash(git reset --hard:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(launchctl:*)",
      "Bash(mkfs:*)",
      "Bash(passwd:*)",
      "Bash(reboot:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/)",
      "Bash(rm -rf ~/*)",
      "Bash(shutdown:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(systemctl:*)",
      "Bash(userdel:*)",
      "Bash(usermod:*)",
      "Read(.env)",
      "Read(.env.production)",
      "Read(~/.ssh/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "code-review@claude-code-plugins": true,
    "playwright-skill@playwright-skill": true
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "includeCoAuthoredBy": false,
  "statusLine": {
    "command": "npx -y ccstatusline@latest",
    "type": "command"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "ai-notify event notification",
            "type": "command"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "ai-notify event permission-request",
            "type": "command"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check",
            "type": "command"
          }
        ],
        "matcher": "Read"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "ai-notify event stop",
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "ai-notify event user-prompt-submit",
            "type": "command"
          },
          {
            "command": "ai-flags handle",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/UserPromptSubmit/log_prompts.py",
            "type": "command"
          }
        ]
      }
    ]
  }
}
