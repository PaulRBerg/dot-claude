      "~/.codex",
      "~/.config",
      "~/.gemini",
      "~/.local",
      "~/.zsh",
      "~/projects",
      "~/sablier",
      "~/work"
    ],
    "allow": [
      "Bash(COMMAND:*)",
      "Bash(ai-flags:*)",
      "Bash(ai-notify:*)",
      "Bash(amp:*)",
      "Bash(anvil:*)",
