{
  "includeCoAuthoredBy": false,
  "model": "opusplan",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/ccnotify/ccnotify.py Notification"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/ccnotify/ccnotify.py Stop"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/ccnotify/ccnotify.py UserPromptSubmit"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/UserPromptSubmit/append-default.py"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/UserPromptSubmit/append-explain.py"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/UserPromptSubmit/append-ultrathink.py"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(bun:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(eza:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(jq:*)",
      "Bash(mkdir:*)",
      "Bash(na:*)",
      "Bash(ni:*)",
      "Bash(nlx:*)",
      "Bash(npm:*)",
      "Bash(nlx:*)",
      "Bash(node:*)",
      "Bash(nr:*)",
      "Bash(nun:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(timeout:*)",
      "Bash(touch:*)",
      "Bash(yarn:*)",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "mcp__context7",
      "mcp__filesystem",
      "mcp__github",
      "mcp__magic",
      "mcp__container-use",
      "mcp__playwright",
      "mcp__sequential-thinking",
      "mcp__serena",
      "mcp__solana-mcp-server"
    ],
    "deny": [
      "Bash(> /etc/*)",
      "Bash(chmod -R:*)",
      "Bash(chown -R:*)",
      "Bash(dd:*)",
      "Bash(doas:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(launchctl:*)",
      "Bash(mkfs:*)",
      "Bash(passwd:*)",
      "Bash(reboot:*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/)",
      "Bash(rm -rf ~/*)",
      "Bash(shutdown:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(systemctl:*)",
      "Bash(userdel:*)",
      "Bash(usermod:*)"
    ]
  },
  "statusLine": {
    "command": "bunx -y ccstatusline@latest",
    "padding": 0,
    "type": "command"
  }
}
