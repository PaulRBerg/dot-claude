{
  // Read permissions for specific files
  // NOTE: to add reading directories, use the additional-dirs.jsonc file
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": ["Read(~/.zshrc)"],
    "deny": ["Read(~/Drive/Secrets/**)", "Read(~/.ssh/**)", "Read(.env)", "Read(.env.production)"]
  }
}
