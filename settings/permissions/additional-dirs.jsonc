{
  // Additional directories that Claude Code can access
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "additionalDirectories": [
      "/etc/nix",
      "/tmp",
      "~/.claude",
      "~/.codex",
      "~/.claude-prompts",
      "~/.config",
      "~/.gemini",
      "~/.local",
      "~/.zsh",
      "~/projects",
      "~/sablier",
      "~/work"
    ]
  }
}
