{
  // Bash command permissions - allowed and denied shell operations
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      // AI hooks
      "Bash(ai-flags:*)",
      "Bash(ai-notify:*)",

      // Code Quality & Formatting
      "Bash(biome:*)",
      "Bash(bulloak:*)",
      "Bash(mdformat:*)",
      "Bash(prettier:*)",

      // Core Shell Commands
      "Bash(COMMAND:*)",
      "Bash(cd:*)",
      "Bash(cwd:*)",
      "Bash(done:*)",
      "Bash(echo:*)",
      "Bash(for:*)",
      "Bash(ln:*)",
      "Bash(kill:*)",
      "Bash(printf:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(select:*)",
      "Bash(test:*)",
      "Bash(time:*)",
      "Bash(timeout:*)",
      "Bash(which:*)",
      "Bash(while:*)",
      "Bash(xargs:*)",

      // Custom Scripts
      "Bash(~/.claude/hooks:*)",

      // File System
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(eza:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(stat:*)",
      "Bash(tar:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(unzip:*)",
      "Bash(zip:*)",

      // Git & Version Control
      "Bash(delta:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(git-filter-repo:*)",
      "Bash(gita:*)",

      // Misc
      "Bash(amp:*)",
      "Bash(atuin:*)",
      "Bash(bc:*)",
      "Bash(chezmoi:*)",
      "Bash(just:*)",
      "Bash(curl:*)",
      "Bash(gdate:*)",
      "Bash(identify:*)",
      "Bash(jq:*)",
      "Bash(nix:*)",
      "Bash(lsof:*)",
      "Bash(qsv:*)",
      "Bash(screencapture:*)",
      "Bash(sqlite3:*)",
      "Bash(terminal-notifier:*)",
      "Bash(zk:*)",

      // Node.js
      "Bash(bun:*)",
      "Bash(na:*)",
      "Bash(ni:*)",
      "Bash(node:*)",
      "Bash(next:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(nlx:*)",
      "Bash(nr:*)",
      "Bash(nun:*)",
      "Bash(pnpm:*)",
      "Bash(tsc:*)",
      "Bash(tsgo:*)",
      "Bash(tsx:*)",
      "Bash(yarn:*)",

      // Python
      "Bash(pip:*)",
      "Bash(poetry:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(ruff:*)",
      "Bash(pyright:*)",
      "Bash(pytest:*)",
      "Bash(uv:*)",

      // Rust
      "Bash(cargo:*)",
      "Bash(rustc:*)",

      // Text Processing
      "Bash(awk:*)",
      "Bash(cut:*)",
      "Bash(head:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",

      // Search
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(sed:*)",

      // Web3
      "Bash(anvil:*)",
      "Bash(cast:*)",
      "Bash(forge:*)"
    ],
    "deny": [
      // Destructive File Operations
      "Bash(chmod -R:*)",
      "Bash(chown -R:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/)",
      "Bash(rm -rf ~/*)",

      // Dangerous Disk Operations
      "Bash(> /dev/sda*)",
      "Bash(> /etc/*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",

      // Process Management
      "Bash(kill -9:*)",
      "Bash(killall:*)",

      // Git & Version Control
      "Bash(git reset --hard:*)",

      // Node.js
      "Bash(npm publish:*)",

      // System Administration
      "Bash(doas:*)",
      "Bash(launchctl:*)",
      "Bash(passwd:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(systemctl:*)",
      "Bash(userdel:*)",
      "Bash(usermod:*)",

      // System Control
      "Bash(reboot:*)",
      "Bash(shutdown:*)"
    ]
  }
}
