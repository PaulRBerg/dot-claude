{
  // Hooks configuration for Claude Code, ordered alphabetically
  // These hooks execute in response to events during Claude Code's operation
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/SessionEnd/sync_settings.py",
            "type": "command"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "command": "ai-notify event notification",
            "type": "command"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/PostToolUse/plan_frontmatter.py",
            "type": "command"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "ai-notify event permission-request",
            "type": "command"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "ai-notify event stop",
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "ai-notify event user-prompt-submit",
            "type": "command"
          },
          {
            "command": "ai-flags handle",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/UserPromptSubmit/log_prompts.py",
            "type": "command"
          }
        ]
      }
    ]
  }
}
