{
  // Hooks configuration for Claude Code, ordered alphabetically
  // These hooks execute in response to events during Claude Code's operation
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "ai-notify event notification",
            "type": "command"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "ai-notify event permission-request",
            "type": "command"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/PostToolUse/add_plan_frontmatter.py",
            "type": "command"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "command": "ai-notify event ask-user-question",
            "type": "command"
          }
        ]
      },
      {
        "hooks": [
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/SessionEnd/commit_prompts.py",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/SessionEnd/sync_global_settings.py",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/SessionEnd/sync_local_settings.py",
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "ai-notify event stop",
            "type": "command"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "ai-notify event user-prompt-submit",
            "type": "command"
          },
          {
            "command": "ai-flags handle",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/UserPromptSubmit/log_prompts.py",
            "type": "command"
          }
        ]
      }
    ]
  }
}
