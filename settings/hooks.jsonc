{
  // Hooks configuration for Claude Code, ordered alphabetically
  // These hooks execute in response to events during Claude Code's operation
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cc-notifier/events/notification.py",
            "type": "command"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cc-notifier/events/permission.py",
            "type": "command"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check",
            "type": "command"
          }
        ],
        "matcher": "Read"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cc-notifier/events/stop.py",
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/cc-notifier/events/user_prompt.py",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/UserPromptSubmit/detect_flags.py",
            "type": "command"
          },
          {
            "command": "~/.claude/hooks/UserPromptSubmit/log_prompts.py",
            "type": "command"
          }
        ]
      }
    ]
  }
}
